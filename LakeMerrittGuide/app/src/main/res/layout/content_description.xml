<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.billy.lakemerrittguide.DescriptionActivity"
        tools:showIn="@layout/activity_description">



    <FrameLayout
        android:id="@+id/descriptionFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/descriptionImageLogo"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:src="@drawable/android_arms"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_below="@+id/descriptionFrameLayout"
        android:id="@+id/descriptionLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/descriptionPlaceTextView"
            android:text="place name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="type"
            android:id="@+id/descriptionTypeTextView"
            />

        <TextView
            android:id="@+id/descriptionLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="locaton info"
            />

    </LinearLayout>

    <Button
        android:id="@+id/favoriteButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/descriptionInfoDetailText"
        android:layout_alignParentEnd="true"
        android:background="@drawable/hearticon"
        />

    <TextView
        android:layout_below="@+id/descriptionLinearlayout"
        android:layout_marginTop="20dp"
        android:id="@+id/descriptionInfoDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="about the placeeeee"
        />

    <LinearLayout
        android:layout_below="@id/descriptionInfoDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/frameTwoImageTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/android_arms"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/frameTwoImageOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurantbacktitlelogo"
            />

    </LinearLayout>


    </RelativeLayout>
</ScrollView>