<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.billy.lakemerrittguide.DescriptionActivity"
    tools:showIn="@layout/activity_description">


    <FrameLayout
        android:id="@+id/descriptionFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/descriptionImageLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/portalicon"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_below="@+id/descriptionFrameLayout"
        android:id="@+id/descriptionLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionPlaceTextView"
            android:text="place name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="type"
            android:id="@+id/descriptionTypeTextView"
            />

        <TextView
            android:id="@+id/descriptionLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="locaton info"
            />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/descriptionLinearlayout"
        android:layout_marginTop="20dp"
        android:id="@+id/descriptionInfoDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="about the placeeeee"
        />

    <FrameLayout
        android:layout_below="@+id/descriptionInfoDetailText"
        android:id="@+id/descriptionSecondFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/frameTwoImageOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurantbacktitlelogo"/>

        <ImageView
            android:id="@+id/frameTwoImageTwo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/portalicon"
            android:layout_gravity="left|center_vertical" />


        <ImageView
            android:id="@+id/frameTwoImageThree"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android_arms"
            android:layout_gravity="bottom|right" />
    </FrameLayout>

</RelativeLayout>
