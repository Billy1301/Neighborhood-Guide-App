<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.billy.lakemerrittguide.MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <ImageView
        android:id="@+id/main_imageLogo"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:src="@drawable/lakemerrittmain"/>

    <LinearLayout
        android:layout_below="@+id/main_imageLogo"
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/restaurantsTextView"
            android:text="Restaurants"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/activitiesTextView"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:text="Activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@android:color/black" />


        <TextView
            android:id="@+id/vielAllTextView"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:text="View All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>


        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@android:color/black" />


        <TextView
            android:id="@+id/favoriteTextView"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:text="Favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <FrameLayout
            android:id="@+id/main_secondFrame_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>



</RelativeLayout>
